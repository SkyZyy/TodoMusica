<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/pink_bg">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/loginlogo"
                android:layout_gravity="center" />

        </FrameLayout>

        <EditText
            android:id="@+id/registerName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:fontFamily="@font/roboto_light"
            android:hint="Nombre"
            android:layout_gravity="center"
            android:textColorHint="@color/gray"
            android:background="@drawable/custom_inputfields"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/registerSurname"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:fontFamily="@font/roboto_light"
            android:hint="Apellidos"
            android:layout_gravity="center"
            android:textColorHint="@color/gray"
            android:background="@drawable/custom_inputfields"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/registerUsername"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:fontFamily="@font/roboto_light"
            android:hint="Nombre de usuario"
            android:layout_gravity="center"
            android:textColorHint="@color/gray"
            android:background="@drawable/custom_inputfields"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/registerEmail"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:fontFamily="@font/roboto_light"
            android:hint="Email"
            android:layout_gravity="center"
            android:textColorHint="@color/gray"
            android:background="@drawable/custom_inputfields"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/registerPass"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:fontFamily="@font/roboto_light"
            android:hint="Contraseña"
            android:layout_gravity="center"
            android:textColorHint="@color/gray"
            android:background="@drawable/custom_inputfields"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/registerPass2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:fontFamily="@font/roboto_light"
            android:hint="Repita la contraseña"
            android:layout_gravity="center"
            android:textColorHint="@color/gray"
            android:background="@drawable/custom_inputfields"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_buttons"
            android:fontFamily="@font/roboto_bold"
            android:text="Registrar"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/switchLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Tienes cuenta?"
            android:textColor="@color/gray"
            android:textAlignment="center"
            android:layout_marginBottom="50dp"/>

    </LinearLayout>

</ScrollView>